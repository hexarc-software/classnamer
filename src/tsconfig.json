{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": true,
        "jsx": "react",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../dist"
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./node_modules/**/*",
        "!./src/**/*.d.ts",
        "!./dist/**/*.d.ts"
    ],
    "files": [
        "classnamer.ts"
    ],
    "exclude": []
}
